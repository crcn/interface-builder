{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": ["es2015.promise", "dom", "es5", "esnext"],
    "module": "es6",
    "outDir": "lib",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "*-test", "lib", "index.d.ts"],
  "filesGlob": ["./src/**/*.ts"]
}
